<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #26215a;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--white);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}

	.icon {
		width: 2em;
		height: 2em;
		vertical-align: -0.125em;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
