---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h1>
			<a href="/">{SITE_TITLE}</a><img
				src="/logos/HelenB_DotPattern_Square.png"
				width="30px"
				height="30px"
				style="display: inline-block; position: relative; top:-1 5px; left: -10px"
			/>
		</h1>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/writings">writings</HeaderLink>
			<HeaderLink href="/about">my story</HeaderLink>
			<HeaderLink href="/contact">contact me</HeaderLink>
		</div>
		</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #26215a;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--white);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}

	.icon {
		width: 2em;
		height: 2em;
		vertical-align: -0.125em;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
